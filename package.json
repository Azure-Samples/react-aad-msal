{
  "name": "react-aad-msal-root",
  "version": "1.0.0",
  "description": "root project",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/tslint-microsoft-contrib"
    ]
  },
  "scripts": {
    "build": "yarn build:lib && yarn build:sample",
    "build:lib": "cd packages/lib && yarn build",
    "build:sample": "cd packages/sample && yarn build",
    "reset-modules": "rm -rf node_modules/ packages/*/node_modules",
    "start": "yarn build:lib && cd packages/sample && yarn start",
    "clean": "yarn clean:lib && yarn clean:sample",
    "clean:lib": "cd packages/lib && yarn clean",
    "clean:sample": "cd packages/sample && yarn clean",
    "test": "yarn test:lib && yarn test:sample",
    "test:lib": "cd packages/lib && yarn test",
    "test:sample": "yarn build:lib && cd packages/sample && yarn test --watchAll=false"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,json,css,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --config tslint.json --fix",
      "git add"
    ]
  }
}
