{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-microsoft-contrib/recommended.json",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts", "sample/**/*.js"]
  },
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
  "rules": {
    "variable-name": false,
    "no-relative-imports": false,
    "prefer-type-cast": false,
    "max-func-body-length": 200
  }
}
